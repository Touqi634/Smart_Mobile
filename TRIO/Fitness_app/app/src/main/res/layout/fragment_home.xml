<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainMenuActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:layout_marginTop="180dp"
        android:paddingTop="150dp">


        <ImageView
            android:id="@+id/img_food"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/food_logo" />

        <ImageView
            android:id="@+id/img_activity"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/activity_logo" />

        <ImageView
            android:id="@+id/img_weight"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/weight_logo" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="180dp"
        android:paddingLeft="40dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/img_drink"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/drink_logo" />

        <ImageView
            android:id="@+id/img_treadmill"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/treadmill_logo" />

        <ImageView
            android:id="@+id/img_sleep"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/sleep_logo" />



    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

    </FrameLayout>



</RelativeLayout>