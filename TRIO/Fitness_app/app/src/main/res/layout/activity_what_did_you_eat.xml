<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhatDidYouEatActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What did you eat today?"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_food"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:hint="Food" />


        <EditText
            android:id="@+id/et_cal"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:hint="Calories" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Breakfast"
        android:textSize="30dp" />

    <CheckBox
        android:id="@+id/cb_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Lunch"
        android:textSize="30dp" />

    <CheckBox
        android:id="@+id/cb_dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Dinner"
        android:textSize="30dp" />

    <Button
        android:id="@+id/bttn_calc_cal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:background="@drawable/button_design"
        android:text="Calculate"
        android:textColor="#FFFF" />

    <TextView
        android:id="@+id/total_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Total calories:"
        android:textColor="#000000"
        android:textSize="25dp" />


    <Button
        android:id="@+id/bttn_save_cal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:background="@drawable/button_design"
        android:text="Save"
        android:textColor="#FFFF" />

</LinearLayout>