<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#6FBB52">


    <LinearLayout
        android:id="@+id/tvSignup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_design"
            android:src="@drawable/icon_logo" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="289dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/textbox_design"
            android:drawableLeft="@drawable/ic_login_logo"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:paddingLeft="30dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="289dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/textbox_design"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="30dp" />

        <Button
            android:id="@+id/bttn_login"
            android:layout_width="292dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_design"
            android:text="Login"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textviewSignuph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="No account? Sign up here"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>




