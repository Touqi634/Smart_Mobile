<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainMenuActivity">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Your challenges:"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Friend Challenge:"
        android:textSize="30dp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_height="267dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/curr_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="30dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/challenge_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="30dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Random Challenge:"
            android:textSize="30dp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/random_challenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="30dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/challenge_friend"
        android:layout_width="292dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_design"
        android:text="Challenge a friend"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/bttn_fetch"
        android:layout_width="292dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_design"
        android:text="Fetch Data"
        android:textColor="#FFFFFF" />



</LinearLayout>