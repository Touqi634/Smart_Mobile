<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhatDidYouEatActivity"
    android:orientation="vertical">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email of a Friend:"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/challenge_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Email"></EditText>

        <Spinner
            android:id="@+id/challenges_spinner"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_gravity="center">

        </Spinner>

        <Spinner
            android:id="@+id/amount_spinner"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_gravity="center">

        </Spinner>


    </LinearLayout>
<Space
    android:layout_width="wrap_content"
    android:layout_height="150dp" />

    <Button
        android:id="@+id/bttn_challenge_send"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:background="@drawable/button_design"
        android:text="Send Challenge"
        android:textColor="#FFFF" />



</LinearLayout>